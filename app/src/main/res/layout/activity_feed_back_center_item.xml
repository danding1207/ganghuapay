<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        app:cardBackgroundColor="@color/white"
>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:context=".MainActivity">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="6dp">

            <android.support.v7.widget.CardView
                    android:id="@+id/image"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="24dp">

                <ImageView
                        android:id="@+id/iv_head_pic"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@mipmap/ic_launcher"/>
            </android.support.v7.widget.CardView>

            <TextView
                    android:id="@+id/tv_feed_back_user_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:singleLine="true"
                    android:layout_marginLeft="4dp"
                    android:text="asfadsfdaf"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_size_button"/>
        </LinearLayout>

        <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:background="@drawable/cutting_line_city_list"/>

        <TextView
                android:id="@+id/tv_feed_back_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:singleLine="true"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:text="asfadsfdaf"
                android:padding="6dp"
                android:textColor="@color/black"
                android:textSize="@dimen/font_size_button"/>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="6dp"
        >

            <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="用户反馈："
                    android:textColor="@color/wdqb_gray"
                    android:textSize="@dimen/font_size_Medium"/>

            <TextView
                    android:id="@+id/tv_feed_back_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2016-10-15 15:56"
                    android:textColor="@color/wdqb_gray"
                    android:textSize="@dimen/font_size_Medium"/>
        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="6dp">

            <TextView
                    android:id="@+id/tv_feed_back_content"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="ASFDSFDSAFASDFSADFASDFAFDASFDSSADASDASDSADASDFDSAFDAGDSFGFDGFDGADSFsdasdfsdfdsgfsdghfdgafgadfdsfsafdgfdhgsgagafdsafsdfgfhgfhfg"
                    android:textColor="@color/wdqb_gray"
                    android:textSize="@dimen/font_size_Medium"/>

        </LinearLayout>

        <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:background="@drawable/cutting_line_city_list"/>

        <LinearLayout
                android:id="@+id/ll_feed_back_answer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
        >

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="6dp">

                <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="客服回复:"
                        android:textColor="@color/green_slow"
                        android:textSize="@dimen/font_size_Medium"/>

                <TextView
                        android:id="@+id/tv_feed_back_answer_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2016-10-17 13:23"
                        android:textColor="@color/green_slow"
                        android:textSize="@dimen/font_size_Medium"/>
            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:layout_marginBottom="8dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="6dp">

                <TextView
                        android:id="@+id/tv_feed_back_answer_content"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="aaaaaa"
                        android:textColor="@color/green_slow"
                        android:textSize="@dimen/font_size_Medium"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>