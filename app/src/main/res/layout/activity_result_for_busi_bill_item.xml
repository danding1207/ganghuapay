<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              tools:context=".MainActivity">

    <ImageView
            android:id="@+id/iv_gas_fee_status"
            android:layout_width="wrap_content"
            android:layout_height="156dp"
            android:src="@drawable/bill_left_pic_undone_short"/>

    <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="12dp"
            android:layout_weight="1"
            android:orientation="vertical">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="6dp">

            <TextView
                    android:id="@+id/tv_gas_fee_time"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="2014年8月"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_size_Medium"/>

            <TextView
                    android:id="@+id/tv_gas_fee_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="未缴费"
                    android:visibility="invisible"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_size_Medium"/>
        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="6dp"
                android:background="@drawable/small_white_button"
                android:orientation="vertical">


            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="6dp">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="营业费类型"
                        android:textColor="@color/black"
                        android:textSize="@dimen/font_size_Medium"/>

                <TextView
                        android:id="@+id/tv_busi_fee_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical|right"
                        android:text="服务费"
                        android:textColor="@color/black"
                        android:textSize="@dimen/font_size_Medium"/>


            </LinearLayout>

            <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="6dp"
                    android:layout_marginRight="6dp"
                    android:background="@drawable/cutting_line_city_list"/>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
            >


                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:padding="6dp">

                    <TextView
                            android:id="@+id/tv_gas_fee_all_amount"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_vertical|left"
                            android:text="欠费金额：￥80.00"
                            android:textColor="@color/dark_gray"
                            android:textSize="@dimen/font_size_Medium"/>

                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:padding="6dp">

                    <TextView
                            android:id="@+id/tv_gas_fee_total_amount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:text="实缴金额："
                            android:textColor="@color/black"
                            android:textSize="@dimen/font_size_Medium"/>

                    <TextView
                            android:id="@+id/tv_busi_fee_amount"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="left"
                            android:text="￥50.00"
                            android:textColor="@color/dark_green_slow"
                            android:textSize="@dimen/font_size_Medium"/>
                </LinearLayout>

            </LinearLayout>


        </LinearLayout>
    </LinearLayout>

</LinearLayout>