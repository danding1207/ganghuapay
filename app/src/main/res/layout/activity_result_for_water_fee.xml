<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:fitsSystemWindows="true">

    <data>

        <import type="android.view.View"/>
    </data>

    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/main_bg"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            tools:context=".MainActivity">


        <android.support.design.widget.AppBarLayout
                android:id="@+id/appBarLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fitsSystemWindows="true"
                tools:layout_constraintTop_creator="1"
                tools:layout_constraintRight_creator="1"
                app:layout_constraintRight_toRightOf="parent"
                tools:layout_constraintLeft_creator="1"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
        >

            <android.support.v7.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:background="@drawable/title_bg"
                    app:layout_collapseMode="pin"
                    tools:layout_editor_absoluteX="0dp"
                    tools:layout_editor_absoluteY="0dp"/>

        </android.support.design.widget.AppBarLayout>

        <ScrollView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:scrollbars="none"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/appBarLayout"
                android:layout_marginRight="8dp" app:layout_constraintRight_toRightOf="parent"
                android:layout_marginLeft="8dp" app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginStart="8dp" android:layout_marginEnd="8dp"
                app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="8dp">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/unity_list_touch_bg"
                    android:orientation="vertical"
                    tools:layout_constraintTop_creator="1"
                    tools:layout_constraintRight_creator="1"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/appBarLayout"
                    tools:layout_constraintLeft_creator="1"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:id="@+id/linearLayout5">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:padding="8dp">

                    <TextView
                            android:layout_width="90dp"
                            android:layout_height="wrap_content"
                            android:text="户            号："
                            android:textColor="@color/black"
                            android:textSize="@dimen/font_size_Medium"/>

                    <TextView
                            android:id="@+id/wt_account_number"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="123213142131"
                            android:textColor="@color/black"
                            android:textSize="@dimen/font_size_Medium"/>

                </LinearLayout>

                <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="@color/main_bg"/>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:padding="8dp">

                    <TextView
                            android:layout_width="90dp"
                            android:layout_height="wrap_content"
                            android:text="客    户    名："
                            android:textColor="@color/black"
                            android:textSize="@dimen/font_size_Medium"/>

                    <TextView
                            android:id="@+id/wt_account_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="张无忌"
                            android:textColor="@color/black"
                            android:textSize="@dimen/font_size_Medium"/>

                </LinearLayout>

                <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="@color/main_bg"/>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:padding="8dp">

                    <TextView
                            android:layout_width="90dp"
                            android:layout_height="wrap_content"
                            android:text="预    付    款："
                            android:textColor="@color/black"
                            android:textSize="@dimen/font_size_Medium"/>

                    <TextView
                            android:id="@+id/wt_advance"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="￥0.00"
                            android:textColor="@color/black"
                            android:textSize="@dimen/font_size_Medium"/>

                </LinearLayout>

                <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="@color/main_bg"/>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:padding="8dp">

                    <TextView
                            android:layout_width="90dp"
                            android:layout_height="wrap_content"
                            android:text="应 缴  水 费："
                            android:textColor="@color/black"
                            android:textSize="@dimen/font_size_Medium"/>

                    <TextView
                            android:id="@+id/wt_FEE_YJSF"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="￥0.00"
                            android:textColor="@color/black"
                            android:textSize="@dimen/font_size_Medium"/>

                </LinearLayout>

                <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="@color/main_bg"/>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:padding="8dp">

                    <TextView
                            android:layout_width="90dp"
                            android:layout_height="wrap_content"
                            android:text="应缴滞纳金："
                            android:textColor="@color/black"
                            android:textSize="@dimen/font_size_Medium"/>

                    <TextView
                            android:id="@+id/wt_FEE_YJZNJ"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="￥0.00"
                            android:textColor="@color/black"
                            android:textSize="@dimen/font_size_Medium"/>

                </LinearLayout>

                <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="@color/main_bg"/>

                <LinearLayout
                        android:id="@+id/ll_account_address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/unity_list_touch_bg"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:padding="8dp">

                    <TextView
                            android:layout_width="90dp"
                            android:layout_height="wrap_content"
                            android:text="地            址："
                            android:textColor="@color/black"
                            android:textSize="@dimen/font_size_Medium"/>

                    <TextView
                            android:id="@+id/wt_account_address"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="北京市海淀区**家园***102室"
                            android:textColor="@color/black"
                            android:textSize="@dimen/font_size_Medium"/>

                </LinearLayout>

                <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="@color/main_bg"/>

                <TextView
                        android:id="@+id/wt_FEE_MON"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:padding="8dp"
                        android:gravity="center_vertical"
                        android:text="欠费记录账务年月区间:"
                        android:textColor="@color/black"
                        android:textSize="@dimen/font_size_Medium"/>

                <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="@color/main_bg"/>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:padding="8dp">

                    <TextView
                            android:layout_width="90dp"
                            android:layout_height="wrap_content"
                            android:text="缴 费  总 额："
                            android:textColor="@color/dark_green_slow"
                            android:textSize="@dimen/font_size_Medium"/>

                    <TextView
                            android:id="@+id/wt_AllWaterFee"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="￥0.00"
                            android:textColor="@color/dark_green_slow"
                            android:textSize="@dimen/font_size_Medium"/>

                </LinearLayout>

            </LinearLayout>

        </ScrollView>

        <android.support.v7.widget.CardView
                android:id="@+id/wt_button_payment"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:cardCornerRadius="0dp"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardBackgroundColor="#46872B"
                tools:layout_constraintBottom_creator="1"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">

            <TextView
                    android:id="@+id/wt_button_text"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:text="缴费"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_size_Medium"/>
        </android.support.v7.widget.CardView>

        <com.mqt.ganghuazhifu.view.ShuiyinView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/shuiyin"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>

    </android.support.constraint.ConstraintLayout>
</layout>